<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.uge.yams.controllers.UserController" style="-fx-background-color: #4C4540;" prefWidth="1000" prefHeight="600">

    <!-- Partie gauche : Tableau de combinaisons -->
    <left>
        <VBox spacing="10" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
            <VBox.margin>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </VBox.margin>
            <Label text="ðŸ”´" style="-fx-font-size: 24;" />
            <Label text="Table of combinations" style="-fx-font-weight: bold;"/>
            <TableView fx:id="comboTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="comboColumn" text="Combinations"/>
                    <TableColumn fx:id="statusColumn" text="Statut"/>
                    <TableColumn fx:id="scoreColumn" text="Score"/>
                </columns>
            </TableView>
        </VBox>
    </left>

    <!-- Partie haut : Titre -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <VBox.margin>
                <Insets top="20" right="0" bottom="10" left="0"/>
            </VBox.margin>
            <Label text="Yams" style="-fx-font-size: 28; -fx-text-fill: white;"/>
            <Label fx:id="usernameLabel" text="Player : " style="-fx-font-size: 16; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- Partie centre : DÃ©s -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <VBox.margin>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </VBox.margin>

            <!-- Cercle de dÃ©s -->
            <StackPane prefWidth="200" prefHeight="500" style="-fx-background-color: #3C6843; -fx-border-radius: 100; -fx-background-radius: 100; -fx-border-color: #D6C8A6; -fx-border-width: 10;">
                <AnchorPane fx:id="gameElementContainer" topAnchor="0.0" bottomAnchor="0.0" leftAnchor="0.0" rightAnchor="0.0">
                    <!-- On injecte les Ã©lÃ©ments de jeux ici -->
                </AnchorPane>
            </StackPane>

            <Button text="Roll" onAction="#onRollButtonClick" fx:id="rollButton" style="-fx-background-color: #B8CDE2; -fx-font-weight: bold;"/>
            <Label fx:id="rerollLabel" text="Relances restantes : x/3" style="-fx-text-fill: white;"/>
        </VBox>
    </center>

    <!-- Partie bas : Choix de combinaison -->
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <VBox.margin>
                <Insets top="10" right="0" bottom="20" left="0"/>
            </VBox.margin>
            <Label text="Choisissez une combinaison" style="-fx-text-fill: white;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Long Straight" style="-fx-background-color: #7C9BB7;"/>
                <Button text="Yahtzee" style="-fx-background-color: #7C9BB7;"/>
                <Button text="Small Straight" style="-fx-background-color: #3C8DD8; -fx-text-fill: white;"/>
                <Button text="Full Straight" style="-fx-background-color: #7C9BB7;"/>
            </HBox>
            <Button text="Valider" fx:id="validateButton"
                    style="-fx-background-color: #D2D7C8; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>
</BorderPane>