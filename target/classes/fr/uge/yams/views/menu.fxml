<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" prefHeight="400" prefWidth="600" style="-fx-background-color: #4B453C;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.uge.yams.controllers.MenuController">

    <!-- CENTRE : Titre + Boutons -->
    <center>
        <VBox alignment="CENTER" spacing="20" stylesheets="@application.css">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <!-- Titre -->
            <Label style="-fx-font-size: 50;" text="Yam's" textFill="#EDE6D6">
                <font>
                    <Font name="Georgia Bold" size="36" />
                </font>
            </Label>

            <!-- Boutons de menu -->
            <Button fx:id="soloButton" prefWidth="200" text="Solo">
            <font>
               <Font name="Georgia Bold" size="13.0" />
            </font></Button>
            <Button fx:id="duelButton" prefWidth="200" text="Multiplayer" />
            <Button fx:id="duelIAButton" prefWidth="200" text="Against an AI" />
            <Button fx:id="customButton" prefWidth="200" text="Custom" />
         <Button fx:id="quitBtn" prefWidth="200" style="-fx-background-color: #4C4540; -fx-text-fill: #ede6d6; -fx-border-color: #ede6d6; -fx-border-radius: 3; -fx-border-width: 2;" text="Quit" />
        </VBox>
    </center>
</BorderPane>
